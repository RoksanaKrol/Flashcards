<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox styleClass="body" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.flashcards.FlashcardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="40.0"/>
    </padding>
    <VBox fx:id="vbox" alignment="CENTER" spacing="20.0">
    </VBox>
    <HBox alignment="CENTER" spacing="25.0">
        <Button fx:id="remove" styleClass="remove" text="remove" onAction="#remove"/>
        <Button text="add new" styleClass="save" onAction="#addFlashcard"/>
        <Button text="edit" styleClass="edit" onAction="#editFlashcard"/>
    </HBox>
    <Button text="back to menu" onAction="#backToMenu"/>
    <Label styleClass="error" fx:id="error"/>
</VBox>