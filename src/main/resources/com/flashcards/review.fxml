<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox styleClass="body" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.flashcards.ReviewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox fx:id="frontBox" styleClass="flashcard" alignment="CENTER" minHeight="100.0">
        <Label fx:id="front"/>
    </VBox>
    <VBox fx:id="backBox" styleClass="flashcard" alignment="CENTER" minHeight="100.0">
        <Label fx:id="back"/>
    </VBox>

    <Button fx:id="review" text="review" onAction="#review"/>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="show" text="Show answer" onAction="#showAnswer"/>
        <Button fx:id="easy" text="Easy" onAction="#easy"/>
        <Button fx:id="ok" text="OK" onAction="#ok"/>
        <Button fx:id="hard" text="Hard" onAction="#hard"/>
        <Button fx:id="backToMenu" text="back to menu" onAction="#backToMenu"/>
    </HBox>
</VBox>
