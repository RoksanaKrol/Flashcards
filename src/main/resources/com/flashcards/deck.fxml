<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox styleClass="body" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.flashcards.DeckController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
        <VBox styleClass="decksButtons" fx:id="decksButtons" alignment="CENTER" spacing="5.0">
        </VBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Button styleClass="save" text="add new" onAction="#addDeck"/>
        <Button styleClass="review" text="review" onAction="#review"/>
        <Button styleClass="remove" text="remove" onAction="#remove"/>
    </HBox>
    <Button text="back to menu" onAction="#backToMenu"/>
    <Label styleClass="error" fx:id="error"/>
</VBox>
